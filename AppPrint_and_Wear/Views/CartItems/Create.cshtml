@model AppPrint_and_Wear.Models.CartItem

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Crear Item del Carrito";
}

<h1>Crear Item del Carrito</h1>
<h4>CartItem</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Cantidad -->
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" min="1" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <p class="text-muted">
                El SubTotal se calculará automáticamente según la cantidad y el precio del producto.
            </p>

            <!-- Carrito -->
            <div class="form-group">
                <label asp-for="Carrito_De_Compra_Id" class="control-label"></label>
                <input asp-for="Carrito_De_Compra_Id" class="form-control" />
                <span asp-validation-for="Carrito_De_Compra_Id" class="text-danger"></span>
            </div>

            <!-- Producto -->
            <div class="form-group">
                <label asp-for="ProductoId" class="control-label"></label>
                <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId">
                    <option value="">-- Seleccione un producto --</option>
                </select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>

            <!-- Imagen personalizada -->
            <div class="form-group mt-3">
                <label asp-for="ImagenPersonalizadaFrente" class="control-label"></label>
                <input asp-for="ImagenPersonalizadaFrente" class="form-control" placeholder="URL o ruta de la imagen personalizada" />
                <span asp-validation-for="ImagenPersonalizadaFrente" class="text-danger"></span>
                <small class="text-muted d-block mt-1">
                    Puedes ingresar una URL de imagen o una imagen generada desde el diseñador.
                </small>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ImagenPersonalizadaEspalda" class="control-label"></label>
                <input asp-for="ImagenPersonalizadaEspalda" class="form-control" placeholder="URL o ruta de la imagen personalizada" />
                <span asp-validation-for="ImagenPersonalizadaEspalda" class="text-danger"></span>
                <small class="text-muted d-block mt-1">
                    Puedes ingresar una URL de imagen o una imagen generada desde el diseñador.
                </small>
            </div>

            <!-- Vista previa (opcional) -->
            <div id="previewContainer" class="mt-3" style="display:none;">
                <label class="fw-bold">Vista previa:</label>
                <img id="previewImg" src="#" alt="Vista previa" class="img-thumbnail" style="max-width:200px;">
            </div>

            <!-- Botones -->
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // Vista previa dinámica de la imagen personalizada
        const imgInput = document.getElementById("ImagenPersonalizada");
        const previewContainer = document.getElementById("previewContainer");
        const previewImg = document.getElementById("previewImg");

        if (imgInput) {
            imgInput.addEventListener("input", () => {
                const url = imgInput.value.trim();
                if (url) {
                    previewImg.src = url;
                    previewContainer.style.display = "block";
                } else {
                    previewContainer.style.display = "none";
                }
            });
        }
    </script>
}
