@model AppPrint_and_Wear.Models.CartItem

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Eliminar Item del Carrito";
}

<h1>Eliminar Item del Carrito</h1>

<h3>¿Está seguro de que desea eliminar este item?</h3>

<div>
    <h4>Detalles del Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubTotal)
        </dt>
        <dd class="col-sm-10" style="color: green;">
            ₡@Model.SubTotal.ToString("N2")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carrito_De_Compra_Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carrito_De_Compra_Id)
        </dd>

        <dt class="col-sm-2">
            Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Productos.Descripcion)
        </dd>

        <!-- Mostrar imágenes personalizadas (Frente y Espalda) -->
        <dt class="col-sm-2">
            Imágenes personalizadas
        </dt>
        <dd class="col-sm-10">
            <div class="d-flex gap-4 flex-wrap">
                <div class="text-center">
                    <p class="fw-semibold mb-1">Frente</p>
                    <img src="@(Model.ImagenPersonalizadaFrente ?? "https://via.placeholder.com/150?text=Sin+imagen")"
                         alt="Imagen frente"
                         class="img-thumbnail"
                         style="max-width:180px;" />
                </div>
                <div class="text-center">
                    <p class="fw-semibold mb-1">Espalda</p>
                    <img src="@(Model.ImagenPersonalizadaEspalda ?? "https://via.placeholder.com/150?text=Sin+imagen")"
                         alt="Imagen espalda"
                         class="img-thumbnail"
                         style="max-width:180px;" />
                </div>
            </div>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CartItemId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
