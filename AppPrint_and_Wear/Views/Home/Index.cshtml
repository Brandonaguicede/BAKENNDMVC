        </form>
    </div>
</div>

<!-- Modal de inicio de sesión -->
<div id="modal-login" class="modal">
    <div class="modal-contenido">
        <span class="cerrar-login">&times;</span>
        <h2>Iniciar Sesión</h2>
        <form id="form-login" method="post" action="/Clientes/Login">
            <input type="email" name="Correo" placeholder="Correo electrónico" required />
            <input type="password" name="Contraseña" placeholder="Contraseña" required />
            <button type="submit">Entrar</button>
            <div id="mensaje-login" style="display:none; margin-top:10px; font-weight:bold;"></div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            const mensajes = ['mensaje-exito', 'mensaje-error'];

            mensajes.forEach(id => {
                const mensaje = document.getElementById(id);
                if (mensaje) {
                    // Mostrar mensaje
                    mensaje.classList.add('mostrar');
                    // Ocultar después de 4 segundos
                    setTimeout(() => {
                        mensaje.classList.remove('mostrar');
                    }, 4000);
                }

            });
        });
    </script>
    <script src="script.js"></script>
    <script src="~/js/LandingPage.js" defer asp-append-version="true"></script>
}
