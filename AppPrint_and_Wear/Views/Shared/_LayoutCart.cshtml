<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Print & Wear</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/Carrito.css" asp-append-version="true" />

    @RenderSection("HeadContent", required: false)
</head>
<body>
    @{
        // Recuperar sesión para saber si hay un cliente logueado
        var clienteId = Context.Session.GetInt32("ClienteId");
    }

    <header class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="~/">
                <i class="fas fa-tshirt"></i> Print & Wear
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    @if (clienteId != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MisCompras", "Carrito_De_Compra")">
                                <i class="fas fa-history"></i> Mis Compras
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="@Url.Action("Carrito", "Carrito_De_Compra")">
                                <i class="fas fa-shopping-cart"></i> Carrito
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </header>

    <main role="main" class="container-fluid p-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center py-3 mt-4">
        © 2025 Print & Wear. Todos los derechos reservados.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scriptdis.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
